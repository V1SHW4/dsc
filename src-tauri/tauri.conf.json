{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "dsc",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["https://deadshot.io/*"]
      }
    },
    "windows": [
      {
        "title": "Deadshot.io Client",
        "width": 800,
        "height": 600,
        "url": "https://deadshot.io",
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self' https://deadshot.io; script-src 'self' 'unsafe-inline' https://deadshot.io; style-src 'self' 'unsafe-inline' https://deadshot.io",
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "deadshot.io",
          "windows": ["main"],
          "enableTauriAPI": true
        }
      ]
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.dsc.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
